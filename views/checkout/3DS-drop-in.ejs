<!DOCTYPE html>
<html lang='en'>

<head>
    <meta charset='UTF-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>3D Secure Checkout - Drop-in UI</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous'>
    <link rel='stylesheet' href='/style2.css' type='text/css'>
</head>

<body>
    <div id='checkout-page' class='mx-auto'>
        <form id='paymentForm' class='row g-3' action='/transaction-sale' method='post'>
            <div class='col-12'>
                <label for='amount'>Transaction Amount</label>
                <br />
                <input id='amount' type='number' name='amount' value="45">
                <br />
                <small>Must match <code>amount</code> in 3DS parameters. <br /> Set to <code>45</code>.</small>
            </div>
            <hr />
            <div style="display: flex; align-items: center; justify-content: center;">
                <div id='dropin-container'></div>
            </div>
            <div class='col-12'>
                <button hidden disabled id='submitButton' class='btn btn-success'>Purchase</button>
            </div>
            <input hidden id='clientToken' value='<%= clientToken %>'>
            <input type='hidden' id='paymentMethodNonce' name='paymentMethodNonce' />
            <input type='hidden' id='deviceData' name='deviceData' />
        </form>
        <div class='docs-card'>
            <table class='table'>
                <tbody>
                    <tr>
                        <th>Developer Docs</th>
                        <td><a target='_blank'
                                href='https://developer.paypal.com/braintree/docs/guides/3d-secure/client-side'>developer.paypal.com/braintree/docs/guides/3d-secure/client-side</a>
                        </td>
                    </tr>
                    <tr>
                        <th>Github.io</th>
                        <td><a target='_blank'
                                href='https://braintree.github.io/braintree-web-drop-in/docs/current/Dropin.html'>braintree.github.io/braintree-web-drop-in/docs/current/Dropin.html</a>
                        </td>
                    </tr>
                    <tr>
                        <th>GitHub</th>
                        <td><a target='_blank'
                                href='https://github.com/braintree/braintree-web-drop-in/blob/main/CHANGELOG.md'>github.com/braintree/braintree-web-drop-in/blob/main/CHANGELOG.md</a>
                        </td>
                    </tr>
                    <tr>
                        <th>Testing Card Values</th>
                        <td><a target='_blank'
                                href='https://developer.paypal.com/braintree/docs/guides/3d-secure/testing-go-live'>developer.paypal.com/braintree/docs/guides/3d-secure/testing-go-live</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <script src="https://js.braintreegateway.com/web/3.97.1/js/client.min.js"></script>
        <script src="https://js.braintreegateway.com/web/3.97.1/js/three-d-secure.min.js"></script>
        <script src="https://js.braintreegateway.com/web/3.97.1/js/data-collector.min.js"></script>
        <script src="https://js.braintreegateway.com/web/dropin/1.40.2/js/dropin.min.js"></script>
        <script type='text/javascript'>

            const clientToken = document.getElementById('clientToken').value
            const submitButton = document.getElementById('submitButton');
            const form = document.getElementById('paymentForm')

            var threeDSecureParameters = {
                amount: "45.00",
                email: "test@example.com",
                billingAddress: {
                    givenName: "Fred",
                    surname: "Flintstone",
                    phoneNumber: "1234567890",
                    streetAddress: "123 Main St",
                    extendedAddress: "#5",
                    locality: "Chicago",
                    region: "IL",
                    postalCode: "60600",
                    countryCodeAlpha2: "US",
                },
                challengeRequested: true,
                additionalInformation: {
                    acsWindowSize: "05",
                },
                version: 2,
            }

            console.log(`Client token is \n ${clientToken}`)

            braintree.client.create({
                authorization: clientToken,
            }, (err, clientInstance) => {
                if (err) {
                    console.error('Error creating client:', clientErr);
                    return;
                }
                braintree.dataCollector.create({
                    client: clientInstance,
                }, (err, dataCollectorInstance) => {
                    if (err) {
                        return;
                    }
                    let deviceData = dataCollectorInstance.deviceData;
                    document.getElementById('deviceData').value = deviceData;
                });
            });

            braintree.dropin.create({
                authorization: clientToken,
                threeDSecure: true,
                card: {
                    cardholderName: {
                        required: false
                    }
                },
                container: '#dropin-container',
                vaultManager: false,
            }, (err, dropinInstance) => {
                if (err) {
                    console.error(err);
                    return;
                }

                submitButton.removeAttribute('hidden')

                dropinInstance.on('paymentMethodRequestable', () => {
                    submitButton.removeAttribute('disabled')
                });

                submitButton.addEventListener('click', (event) => {
                    event.preventDefault()
                    submitButton.setAttribute('disabled', true)
                    dropinInstance.requestPaymentMethod({ threeDSecure: threeDSecureParameters }, (err, payload) => {
                        if (err) {
                            console.error(err);
                            submitButton.removeAttribute('disabled')
                            return
                        }
                        document.getElementById('paymentMethodNonce').value = payload.nonce;
                        form.submit();
                    });
                });
            });
        </script>
</body>

</html>